<main>
    <div class="container">
        <div class="col-9">

            <div class="card">
                <div class="top">
                    <div class="userDetails">
                        <div>
                            <div class="profilepic">
                                <div class="profile_img">
                                    <div class="image">
                                        <img src="/static/images/person.png" alt="img8">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <h3>
                            <p>{{photo.owner.username}}</p>
                            <span>{{photo.location}}</span>

                            {{#if isCreator}}
                            <div class="edit-delete-btns">
                                <a href="/photos/{{photo._id}}/edit">
                                    <img class="edit-img" src="/static/images/edit-pen-icon-6.jpg" alt="edit button">
                                </a>

                                <a href="/photos/{{photo._id}}/delete">
                                    <img class="bin-img" src="/static/images/icon-remove-22.jpg" alt="bin button">
                                </a>
                            </div>
                            {{/if}}
                        </h3>
                    </div>

                </div>

                <!-- Start Pet Photo -->
                <div class="imgBx">
                    <img src="{{photo.imageUrl}}" alt="post" class="cover">
                </div>

                <div class="bottom">

                    <p class="message">
                        <b class="petDescription">{{photo.description}}</b>
                    </p>

                    <div class="pet-details">
                        <p class="petName">Name: {{photo.name}}</p>
                        <p class="petAge">Age: {{photo.age}}</p>
                    </div>

                    {{#if photo.commentList}}
                    {{#each photo.commentList}}
                    {{>comment}}
                    {{/each}}
                    {{/if}}
                </div>

                {{#if isAuthenticated}}
                {{#unless isCreator}}
                <div class="addComments">
                    <form method="POST" action="/photos/{{photo._id}}/comment">
                        <textarea id="comment-textarea" name="comment" cols="40" rows="10"
                            placeholder="Add comment..."></textarea>
                        <button type="submit">Post</button>
                    </form>
                </div>
                {{/unless}}
                {{/if}}
            </div>
        </div>
    </div>
</main>